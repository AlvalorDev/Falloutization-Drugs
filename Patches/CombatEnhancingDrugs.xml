<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- Remove isCombatEnhancingDrug from vanilla Yayo and GoJuice -->
  <Operation Class="PatchOperationRemove">
    <xpath>Defs/ThingDef[defName="Yayo"]/comps/li[@Class="CompProperties_Drug"]/isCombatEnhancingDrug</xpath>
  </Operation>
  <Operation Class="PatchOperationRemove">
    <xpath>Defs/ThingDef[defName="GoJuice"]/comps/li[@Class="CompProperties_Drug"]/isCombatEnhancingDrug</xpath>
  </Operation>

  <!-- Add isCombatEnhancingDrug to FCP combat chems -->
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="FCP_Chem_Psycho"]/comps/li[@Class="CompProperties_Drug"]</xpath>
    <value><isCombatEnhancingDrug>true</isCombatEnhancingDrug></value>
  </Operation>
